                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.activity.ActivityDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.activity.ActivityBookmarks"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.activity.ActivityHistory"
            android:screenOrientation="portrait" />
        <activity
