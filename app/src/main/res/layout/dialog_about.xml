<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/about_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:text="Mykamus Adalah App Perkamusan Dwibahasa Yang Dibangunkan Khusus Untuk Memudahkan Pengguna Yang Sentiasa Merujuk Kepada Kamus Buku Sebagai Bahan Rujukan Bahasa." />



        <TextView
            android:id="@+id/about_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:text="Web:" />
        <TextView
            android:autoLink="web"
            android:id="@+id/about_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorLink="@color/color_blue_7"
            android:text="http://www.mynasmah.com" />


        <TextView
            android:id="@+id/about_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.0dip"
            android:text="Email:" />

        <TextView
            android:id="@+id/about_7"
            android:autoLink="email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textColorLink="@color/color_blue_7"
            android:text="mynasmah@gmail.com" />

        <TextView
            android:id="@+id/about_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.0dip"

            android:text="Developer:" />

        <TextView
            android:id="@+id/about_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_blue_7"
            android:text="anas abdrahman" />

    </LinearLayout>
</ScrollView>