<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_blue_1"
    android:layout_height="wrap_content"
    android:id="@+id/layout_history">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/radius_content_white"
        android:padding="@dimen/spacing_8_all">


        <ImageView
            android:id="@+id/ic_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_close"
            android:paddingEnd="@dimen/spacing_8_end"
            android:paddingStart="@dimen/spacing_8_start"
            android:layout_marginEnd="10dp"
            android:tint="@color/color_dark_4"/>

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offline"
            android:padding="6dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="start"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/radius_quick_dark"
            android:textColor="@color/color_dark_3"/>

        <TextView
            android:id="@+id/txt_history"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="History"
            android:padding="@dimen/spacing_8_all"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="left"
            android:textColor="@color/color_blue_8"/>


        <ImageView
            android:id="@+id/ic_search"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_search"
            android:layout_marginEnd="10dp"
            android:tint="@color/color_dark_4"/>

    </LinearLayout>

</LinearLayout>